{
  "name": "nest-fastify-prisma-boilerplate",
  "version": "1.0.0",
  "description": "Opinionated boilerplate for blazing-fast, type-safe REST APIs â€” NestJS + Fastify driver, Prisma, PostgreSQL, TypeScript, Swagger, structured logs via Pino, linting/formatting (ESLint, Prettier, EditorConfig), Git quality gates (Husky, lint-staged, commitlint), Axios-ready, containerised (Docker) and production-grade error handling. Yarn berry enabled.",
  "keywords": [
    "fastify",
    "nestjs",
    "nestjs-boilerplate",
    "pino",
    "yarn",
    "swagger",
    "typescript",
    "Prisma",
    "postgresql",
    "eslint",
    "OpenAPI",
    "Swagger",
    "Docker",
    "blazing-fast",
    "lint-staged"
  ],
  "bugs": {
    "url": "https://github.com/sahilbabu/nest-fastify-prisma-boilerplate/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sahilbabu/nest-fastify-prisma-boilerplate.git"
  },
  "author": "Mudassar Ali <sahil_bwp@yahoo.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "seed": "ts-node -r tsconfig-paths/register prisma/seeders/index.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.914.0",
