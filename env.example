# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Application Configuration
PORT=3000
NODE_ENV=development

# i18n Configuration
DEFAULT_LANGUAGE=en

# CORS Configuration - JSON array of allowed origins
# For API-only backend: specify client applications, admin panels, mobile apps, etc.
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001","https://your-domain.com"]

# JWT Configuration
# Note: JWT_SECRET_KEY must be at least 32 characters long
JWT_SECRET_KEY=your-super-secret-jwt-key-that-is-at-least-32-characters-long-change-this-in-production
JWT_EXPIRES_IN=7d

# Prisma Configuration (Optional)
OPTIMIZE_API_KEY=your-prisma-optimize-key

# Mail Configuration - Mailtrap for Development
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USER=your-mailtrap-username
MAIL_PASS=your-mailtrap-password
MAIL_FROM_NAME="Your App Name"
MAIL_FROM_EMAIL=noreply@yourapp.com
MAIL_SECURE=false
