model User {
  id              Int       @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  isActive        Boolean   @default(true)
  lastLogin       DateTime?

  phone           String?
  email           String   @unique
  username        String   @unique
  password        String
  avatar          String?

  refreshToken    String?
  refreshTokenExp DateTime?

  @@map("users")
}
