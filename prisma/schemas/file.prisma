model File {
  id           Int      @id @default(autoincrement())
  filename     String   @unique
  originalName String
  mimeType     String
  size         Int
  driver       String
  path         String
  url          String?
  isPublic     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deletedAt    DateTime?

  @@index([createdAt])
  @@index([deletedAt])
  @@map("files")
}
